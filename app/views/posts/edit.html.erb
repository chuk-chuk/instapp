<%= form_for @post, html: { multipart: true }, url: {controller: "posts", action: "update"}, :method => :PATCH do |form| %>
  <%= form.file_field :image %>
  <%= form.label :description, "Create a new post" %>
  <%= form.text_area :description, :rows =>4, :cols => 50 %>
  <%= form.submit "Submit" %>
<% end %>

<%= link_to 'Back', posts_path %>
